@model List<CMCS.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people-fill"></i> HR Management Dashboard</h1>
        <div>
            <a asp-action="CreateUser" class="btn btn-success btn-lg">
                <i class="bi bi-person-plus"></i> Create New User
            </a>
            <a asp-action="Reports" class="btn btn-info btn-lg ms-2">
                <i class="bi bi-file-earmark-bar-graph"></i> Generate Reports
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2>@Model.Count</h2>
                    <small>Registered in system</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Lecturers</h5>
                    <h2>@Model.Count(u => u.Role == "Lecturer")</h2>
                    <small>Active lecturers</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Coordinators</h5>
                    <h2>@Model.Count(u => u.Role == "ProgrammeCoordinator")</h2>
                    <small>Programme coordinators</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Managers</h5>
                    <h2>@Model.Count(u => u.Role == "AcademicManager")</h2>
                    <small>Academic managers</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0"><i class="bi bi-table"></i> All Users</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th>Hourly Rate</th>
                                <th>Role</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>@user.FirstName @user.LastName</strong></td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Department</td>
                                    <td><span class="badge bg-success">R @user.HourlyRate.ToString("F2")</span></td>
                                    <td><span class="badge bg-info">@user.Role</span></td>
                                    <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (user.LecturerId.HasValue)
                                        {
                                            <a asp-action="EditUser" asp-route-id="@user.LecturerId"
                                               class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="text-muted mt-3">No users found</h5>
                    <p class="text-muted">Create your first user to get started</p>
                    <a asp-action="CreateUser" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Create User
                    </a>
                </div>
            }
        </div>
    </div>
</div>