@model List<CMCS.Models.Claim>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Date</th>
                    <th>Hours</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Payment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>#@claim.ClaimId</td>
                        <td>@claim.Lecturer.FirstName @claim.Lecturer.LastName</td>
                        <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                        <td>@claim.HoursWorked</td>
                        <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                        <td>
                            <span class="badge @(claim.Status == ClaimStatus.FullyApproved ? "bg-success" :
                                                                              claim.Status == ClaimStatus.Pending ? "bg-warning" :
                                                                              claim.Status == ClaimStatus.Rejected ? "bg-danger" : "bg-info")">
                        @claim.Status
                    </span>
                </td>
                <td>
                    <span class="badge @(claim.PaymentStatus == PaymentStatus.Paid ? "bg-success" :
                                                                      claim.PaymentStatus == PaymentStatus.Processing ? "bg-warning" : "bg-secondary")">
                        @claim.PaymentStatus
                    </span>
                </td>
            </tr>
                        }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-4">
        <i class="bi bi-inbox display-4 text-muted"></i>
        <h5 class="text-muted mt-3">No claims found</h5>
    </div>
}