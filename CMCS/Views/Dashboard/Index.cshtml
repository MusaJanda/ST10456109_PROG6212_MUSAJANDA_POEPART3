@model List<CMCS.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people-fill"></i> HR Management Dashboard</h1>
        <div>
            <a asp-action="CreateUser" asp-controller="Dashboard" class="btn btn-success btn-lg">
                <i class="bi bi-person-plus"></i> Create New User
            </a>
            <a asp-action="Reports" asp-controller="Dashboard" class="btn btn-info btn-lg ms-2">
                <i class="bi bi-file-earmark-bar-graph"></i> Generate Reports
            </a>
        </div>
    </div>

    <!-- Display TempData messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2>@Model.Count</h2>
                    <small>Registered in system</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Active Lecturers</h5>
                    <h2>@Model.Count(u => u.Role == "Lecturer" && u.IsActive)</h2>
                    <small>@Model.Count(u => u.Role == "Lecturer" && !u.IsActive) inactive</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Active Coordinators</h5>
                    <h2>@Model.Count(u => u.Role == "ProgrammeCoordinator" && u.IsActive)</h2>
                    <small>@Model.Count(u => u.Role == "ProgrammeCoordinator" && !u.IsActive) inactive</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Active Managers</h5>
                    <h2>@Model.Count(u => u.Role == "AcademicManager" && u.IsActive)</h2>
                    <small>@Model.Count(u => u.Role == "AcademicManager" && !u.IsActive) inactive</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin display-4"></i>
                    <h5 class="card-title mt-3">Claims Management</h5>
                    <p class="card-text">Manage approved claims and payments</p>
                    <a asp-action="HRClaims" asp-controller="Dashboard" class="btn btn-light">
                        <i class="bi bi-arrow-right"></i> Manage Claims
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4"></i>
                    <h5 class="card-title mt-3">User Management</h5>
                    <p class="card-text">Create and manage system users</p>
                    <a asp-action="CreateUser" asp-controller="Dashboard" class="btn btn-light">
                        <i class="bi bi-person-plus"></i> Add User
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up display-4"></i>
                    <h5 class="card-title mt-3">Reports & Analytics</h5>
                    <p class="card-text">Generate detailed reports</p>
                    <a asp-action="Index" asp-controller="Reports" class="btn btn-light">
                        <i class="bi bi-file-earmark-bar-graph"></i> View Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><i class="bi bi-table"></i> All Users</h5>
            <div>
                <span class="badge bg-success me-2">Active: @Model.Count(u => u.IsActive)</span>
                <span class="badge bg-secondary">Inactive: @Model.Count(u => !u.IsActive)</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Status</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th>Hourly Rate</th>
                                <th>Role</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr class="@(!user.IsActive ? "table-secondary" : "")">
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@user.FirstName @user.LastName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                        else
                                        {
                                            @user.PhoneNumber
                                        }
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(user.Department))
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                        else
                                        {
                                            @user.Department
                                        }
                                    </td>
                                    <td>
                                        @if (user.HourlyRate > 0)
                                        {
                                            <span class="badge bg-success">R @user.HourlyRate.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var roleBadgeClass = user.Role switch
                                            {
                                                "Lecturer" => "bg-success",
                                                "ProgrammeCoordinator" => "bg-info",
                                                "AcademicManager" => "bg-warning",
                                                "HR" => "bg-primary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @roleBadgeClass">@user.Role</span>
                                    </td>
                                    <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <!-- Edit button for all user types -->
                                            @if (user.LecturerId.HasValue)
                                            {
                                                <a asp-action="EditUser" asp-controller="Dashboard"
                                                   asp-route-lecturerId="@user.LecturerId"
                                                   class="btn btn-sm btn-warning"
                                                   title="Edit User">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            }
                                            else if (user.CoordinatorId.HasValue)
                                            {
                                                <a asp-action="EditUser" asp-controller="Dashboard"
                                                   asp-route-coordinatorId="@user.CoordinatorId"
                                                   class="btn btn-sm btn-warning"
                                                   title="Edit User">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            }
                                            else if (user.ManagerId.HasValue)
                                            {
                                                <a asp-action="EditUser" asp-controller="Dashboard"
                                                   asp-route-managerId="@user.ManagerId"
                                                   class="btn btn-sm btn-warning"
                                                   title="Edit User">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled title="No edit available">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="text-muted mt-3">No users found</h5>
                    <p class="text-muted">Create your first user to get started</p>
                    <a asp-action="CreateUser" asp-controller="Dashboard" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Create User
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table tr.table-secondary td {
        opacity: 0.6;
    }

    .btn-group .btn {
        margin-right: 0.25rem;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>