@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold">
                        <i class="bi bi-box-arrow-in-right"></i> Log In
                    </h2>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                            Log In
                        </button>
                    </form>

                    <hr />

                    <!-- ----------------------------- -->
                    <!--     TEST LOGIN ACCOUNTS       -->
                    <!-- ----------------------------- -->
                    <div class="card mt-4 shadow-sm" style="border-radius: 12px;">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Test Login Accounts</h5>
                            

                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Role</th>
                                        <th>Email</th>
                                        <th>Password</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>HR</td>
                                        <td>hr@cmcs.com</td>
                                        <td>Hr@123</td>
                                    </tr>
                                    <tr>
                                        <td>Programme Coordinator</td>
                                        <td>Pc@cmcs.com</td>
                                        <td>Pc@123</td>
                                    </tr>
                                    <tr>
                                        <td>Academic Manager</td>
                                        <td>Am@cmcs.com</td>
                                        <td>Am@123</td>
                                    </tr>
                                    <tr>
                                        <td>Lecturer</td>
                                        <td>RadebeM21@gmail.com</td>
                                        <td>RadebeM@123</td>
                                    </tr>
                                </tbody>
                            </table>

                            <p class="small text-muted mt-2">
                                Use these accounts to demonstrate the workflow: submit a claim as Lecturer,
                                then log in as ProgrammeCoordinator, AcademicManager, and HR to process the claim end-to-end.
                            </p>
                        </div>
                    </div>
                    <!-- END TEST LOGIN ACCOUNTS -->

                    <div class="text-center mt-4">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
